<!DOCTYPE html>
<html>
  <head>
    <title>TicEtTac - Homepage</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://kit.fontawesome.com/908f94efd2.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <% if (isConnected) { %>
      <%- include('./partials/header_connected.ejs') %> 
   <% } else {%> 
    <%- include('./partials/header.ejs') %> 
    <% } %>
    <h4 class="text-white offset-3 mt-5 mb-3">One-Way ticket:</h4>
    <form action="/search" method="POST" class="form-search d-flex justify-content-center">
      <div class="form-search ">
        <input class="form-control " type="text" name="departure" id="departure" placeholder="From: Paris, Marseille,.." required>
      </div>
      <div class="form-search mx-3">
        <input class="form-control " type="text" name="arrival" id="arrival" placeholder="To: Lille, Nantes,.." required>
      </div>
      <div class="form-search mr-3">
        <input  class="form-control" type="date" name="date" id="date" max="2021-01-29" required>
      </div>
      <div class="form-search mx-3">
        <input  type="submit" value="Go" class="btn btn-danger">
      </div>
    </form>
    <div class="d-flex justify-content-center mt-4">
      <img class="landmark" src="/images/landmark.png">
    </div>
    <%- include('./partials/footer.ejs') %> 
  </body>
</html>
